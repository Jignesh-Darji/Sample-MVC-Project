@model IEnumerable<SampleMVCMasterDetails.Models.Employees>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Designation
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                EmpAddress
            </th>
            <th>
                UserName
            </th>
            <th>
                Age
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Designation
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditEmployee","Home",new { EmpId=item.EmpId },null)|
                    @Html.ActionLink("Delete", "DeleteEmployee", "Home", new { EmpId = item.EmpId }, new { onclick = "return confirm('Are you sure want to delete record?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
